<h1>Listing sub_variants</h1>

<table>
  <tr>
    <th>Variant</th>
    <th>Sku</th>
    <th>Upc</th>
    <th>Size</th>
    <th>Availability</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sub_variants.each do |sub_variant| %>
  <tr>
    <td><%= sub_variant.variant_id %></td>
    <td><%= sub_variant.sku %></td>
    <td><%= sub_variant.upc %></td>
    <td><%= sub_variant.size %></td>
    <td><%= sub_variant.availability %></td>
    <td><%= link_to 'Show', sub_variant %></td>
    <td><%= link_to 'Edit', edit_sub_variant_path(sub_variant) %></td>
    <td><%= link_to 'Destroy', sub_variant, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

