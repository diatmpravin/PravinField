= simple_form_for(@store, :html => {:class => 'form-horizontal' }) do |f|
  - if @store.errors.any?
    %div{:class=>'alert alert-error'}
      %h2= pluralize(@store.errors.count, "error") + ' prohibited this store from being saved:'

      %ul
        - @store.errors.full_messages.each do |msg|
          %li= msg

  .row
    .span5
      .well
        = f.input :name
        = f.input :store_type, :collection=>['MWS', 'Shopify']
        = f.input :icon, :as => :file
      .well
        .controls= f.button :submit, :class => 'btn btn-primary'

    .span7

      .well
        %h3='OMX settings'
        = f.input :queue_flag, :collection=>['True', 'False']
        = f.input :verify_flag, :collection=>['True', 'False']

      .well
        %h3='Amazon MWS settings'
        = f.input :order_results_per_page
        = f.input :max_order_pages

      .well
        %h3='Amazon MWS settings'
        = f.input :authenticated_url