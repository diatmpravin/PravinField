
= paginate @products

.right
	= form_tag products_path, :method => 'get' do
		%p
			= text_field_tag :search, @search
			= submit_tag :search, :name => nil
	%p= link_to 'New Product', new_product_path

%br
%h1= "Products: #{@title}"

.productUpload
	= form_tag importProductFile_imports_path, :method => 'post', :multipart => true do
		Select File:
		= file_field_tag 'file'
		= submit_tag 'Upload Product', :name => nil

%br
%table.whole
	%tr
		%th="Product"
		%th="Variants"
		%th="Stores"
= render @products
	


