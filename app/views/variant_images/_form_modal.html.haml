.modal-header
	%button.close{ "data-dismiss"=>"modal"} x
	%h3= 'Add Image'

= form_for(@variant_image, :remote=>true, :html=>{:class=>'form-horizontal'}) do |f|
	.modal-body
		- if @variant_image.errors.any?
			#error_explanation
				%h2= pluralize(@variant_image.errors.count, "error") + " prohibited this variant_image from being saved:"

				%ul
					- @variant_image.errors.full_messages.each do |msg|
						%li= msg

		= f.hidden_field :variant_id

		.control-group
			= f.label :unique_image_file_name, :class=>'control-label'
			.controls= f.text_field :unique_image_file_name, :placeholder=>'http://', :class=>"input-xlarge"

		.control-group
			= f.label :image_file_name, :class=>'control-label'
			.controls= f.file_field :image

	.modal-footer
		= f.submit 'Add Image', :class=>'btn btn-primary btn-medium'
